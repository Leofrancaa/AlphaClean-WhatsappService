{
  "version": 2,
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    { "source": "/health", "destination": "/api/health" },
    { "source": "/whatsapp/:path*", "destination": "/api/whatsapp/:path*" }
  ],
  "env": {
    "NODE_ENV": "production",
    "PUPPETEER_SKIP_CHROMIUM_DOWNLOAD": "true"
  },
  "buildCommand": "npm run build"
}